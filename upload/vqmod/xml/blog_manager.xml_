      foreach ($blog_setting_query->rows as $result) {
         $blogHomes[$result['key']] = $result['value'];
      }
      $blogHomeData           = unserialize($blogHomes['blogHomeDescription']); 
      $blogHomesDesc          = array();
		$languages              = $this->getLanguages(); // 1, 2, 3
      // $language_id -> the new language id :: 5
